<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/app"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.NumberGame"
        tools:targetApi="31">
        <activity
            android:name=".HigherLowerActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".PlayActivity"/>
        <activity
            android:name=".GuessNumberActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".PlayActivity"/>
        <activity
            android:name=".List5Activity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".PlayActivity"/>
        <activity
            android:name=".List10Activity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".PlayActivity"/>
        <activity
            android:name=".List15Activity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".PlayActivity"/>
        <activity
            android:name=".PlayActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".StatsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>