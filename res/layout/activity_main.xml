<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/test"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NUMBER GAME"
        android:textStyle="bold"
        android:textSize="70sp"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/play_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/play_button"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:text="PLAY"
        android:textStyle="bold"
        android:textSize="60sp"
        android:background="@drawable/main_button"
        app:backgroundTint="@null"
        android:layout_marginTop="100dp"
        app:layout_constraintBottom_toTopOf="@id/stats_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_text"/>

    <Button
        android:id="@+id/stats_button"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="STATS"
        android:textSize="40sp"
        android:textStyle="bold"
        android:background="@drawable/main_button"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@id/settings_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/play_button"/>

    <Button
        android:id="@+id/settings_button"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="SETTINGS"
        android:textSize="30sp"
        android:textStyle="bold"
        android:background="@drawable/main_button"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@id/version_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stats_button"/>

    <TextView
        android:id="@+id/version_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_version_text"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_button" />

</androidx.constraintlayout.widget.ConstraintLayout>