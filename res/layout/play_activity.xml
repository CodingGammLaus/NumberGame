<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".PlayActivity">

    <TextView
        android:id="@+id/main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GAME MODES"
        android:textStyle="bold"
        android:textSize="50sp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/list_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/list_button"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="LIST"
        android:textStyle="bold"
        android:textSize="30sp"
        android:background="@drawable/round_button"
        app:backgroundTint="@null"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="150dp"
        app:layout_constraintBottom_toTopOf="@id/higher_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_text"/>

    <Button
        android:id="@+id/higher_button"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="HIGH"
        android:textSize="28sp"
        android:textStyle="bold"
        android:background="@drawable/round_button"
        app:backgroundTint="@null"
        android:layout_marginStart="150dp"
        app:layout_constraintBottom_toTopOf="@id/guess_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_button"/>

    <Button
        android:id="@+id/guess_button"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="GUESS"
        android:textSize="22sp"
        android:textStyle="bold"
        android:background="@drawable/round_button"
        app:backgroundTint="@null"
        android:layout_marginEnd="150dp"
        app:layout_constraintBottom_toTopOf="@id/order_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/higher_button"/>

    <Button
        android:id="@+id/order_button"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="Order"
        android:textSize="26sp"
        android:textStyle="bold"
        android:background="@drawable/round_button"
        app:backgroundTint="@null"
        android:layout_marginStart="150dp"
        app:layout_constraintBottom_toTopOf="@id/more_to_come_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guess_button"/>

    <TextView
        android:id="@+id/more_to_come_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More to come..."
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_button" />

</androidx.constraintlayout.widget.ConstraintLayout>