<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#24272C">

    <Button
        android:id="@+id/back_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="BACK"
        android:textSize="19sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/main_button"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@id/main_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SETTINGS"
        android:textStyle="bold"
        android:textSize="48sp"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toTopOf="@id/box1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/box1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        android:background="@drawable/popup_grey"
        app:layout_constraintBottom_toTopOf="@id/box2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_text" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="List number"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/list_intervall_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1-1000"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/change_list_intervall"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="CHANGE"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginTop="20dp"
            android:background="@drawable/main_button"
            app:backgroundTint="@null"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/box2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        android:background="@drawable/popup_grey"
        app:layout_constraintBottom_toTopOf="@id/box3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/box1" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Higher / Lower"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/higher_intervall_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1-1000"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/change_higher_intervall"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="CHANGE"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginTop="20dp"
            android:background="@drawable/main_button"
            app:backgroundTint="@null"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/box3"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        android:background="@drawable/popup_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/box2" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guess"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center">

        <TextView
            android:id="@+id/guess_intervall_text"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="1-100"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/change_guess_intervall"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:text="CHANGE"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="@drawable/main_button"
            app:backgroundTint="@null"
            android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <TextView
                android:id="@+id/guess_game_text"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Guess: 5"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/change_guess_game"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:text="SET 10"
                android:textStyle="bold"
                android:textSize="22sp"
                android:background="@drawable/main_button"
                app:backgroundTint="@null"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>